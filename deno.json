{
  "lock": false,
  "tasks": {
    "check": "deno fmt --check && deno lint && deno check **/*.ts && deno check **/*.tsx",
    "cli": "echo \"import '\\$fresh/src/dev/cli.ts'\" | deno run --unstable -A -",
    "manifest": "deno task cli manifest .",
    "start": "deno run -A --watch=static/,routes/ dev.ts",
    "build": "deno run -A dev.ts build",
    "serve": "deno run --allow-env --allow-net --allow-read main.ts",
    "preview": "deno run -A main.ts",
    "update": "deno run -A -r https://fresh.deno.dev/update .",
    "icons:clean": "deno run --allow-read --allow-write ./utils/dev/delete_svg.ts",
    "icons:build": "deno run --allow-read --allow-write ./utils/dev/extract_icons.ts",
    "icons:refresh": "deno task icons:clean && deno task icons:build",
    "dev:tree": "deno run --allow-read --allow-write ./utils/dev/tree_to_md.ts",
    "add-banner": "deno run --allow-read --allow-write utils/dev/add_license_banner.ts",
    "add-banner-dry": "deno run --allow-read --allow-write utils/dev/add_license_banner.ts --dry-run"
  },
  "lint": { "rules": { "tags": ["fresh", "recommended"] } },
  "exclude": ["**/_fresh/*", "**/.git/*", "**/node_modules/*"],
  "compilerOptions": { "jsx": "react-jsx", "jsxImportSource": "preact" },
  "nodeModulesDir": "auto",
  "fmt": { "options": { "lineWidth": 100, "indentWidth": 2 } },
  "imports": {
    "$islands/": "./islands/",
    "$components/": "./components/",
    "$utils/": "./utils/",
    "$data/": "./data/",
    "$routes/": "./routes/",
    "$types": "./types.ts",
    "$fresh/": "https://deno.land/x/fresh@1.7.3/",
    "preact": "https://esm.sh/preact@10.22.0",
    "preact/": "https://esm.sh/preact@10.22.0/",
    "@preact/signals": "https://esm.sh/*@preact/signals@1.2.2",
    "@preact/signals-core": "https://esm.sh/*@preact/signals-core@1.5.1",
    "tailwindcss": "npm:tailwindcss@3.4.1",
    "tailwindcss/": "npm:/tailwindcss@3.4.1/",
    "tailwindcss/plugin": "npm:/tailwindcss@3.4.1/plugin.js",
    "$std/": "https://deno.land/std@0.216.0/",
    "lucide-preact": "https://esm.sh/lucide-preact@0.525.0",
    "@walk": "https://deno.land/std@0.201.0/fs/walk.ts",
    "@path": "https://deno.land/std@0.201.0/path/mod.ts"
  }
}
